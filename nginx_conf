server {
    listen 80;
    client_max_body_size 100M;

    server_name demo.fieldconnected.com;

    location / {
        alias /htdocs/geoptics/app/src/;
        try_files $uri @forceindex;
    }

    location @forceindex {
        rewrite ^/* /index.html;
    }

    location /data/ {
        root /htdocs/geoptics;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:7777;
        proxy_cache_valid any 0;
        proxy_cache off;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
	proxy_connect_timeout       1200s;
	proxy_send_timeout          1200s;
	send_timeout                1200s;
	fastcgi_read_timeout 600;
     	proxy_read_timeout 600;
    }
}

server {
    listen 80;
    client_max_body_size 100M;

    server_name admin.fieldconnected.com;

    location / {
        alias /htdocs/geoptics/admin/src/;
        try_files $uri @forceindex;
    }

    location @forceindex {
        rewrite ^/* /index.html;
    }

    location /data/ {
        root /htdocs/geoptics;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:7777;
        proxy_cache_valid any 0;
        proxy_cache off;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
    }
}
